<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_profile_3"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_8"
    android:paddingLeft="@dimen/padding_48"
    android:paddingRight="@dimen/padding_48"
    android:paddingTop="@dimen/padding_32">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8">

        <LinearLayout
            android:id="@+id/btn_register_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_register_facebook"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_12"
            android:paddingLeft="@dimen/padding_4"
            android:paddingRight="@dimen/padding_4"
            android:paddingTop="@dimen/padding_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawablePadding="@dimen/padding_8"
                android:text="@string/register_facebook"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_register_fb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8">

        <LinearLayout
            android:id="@+id/btn_register_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_register_google"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_12"
            android:paddingLeft="@dimen/padding_4"
            android:paddingRight="@dimen/padding_4"
            android:paddingTop="@dimen/padding_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_google"
                android:drawablePadding="@dimen/padding_8"
                android:text="@string/register_google"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_register_gg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5"
            android:background="@color/colorWhite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/or"
            android:textColor="@color/colorWhite" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5"
            android:background="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="2"
            android:background="@color/colorWhite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="@string/register_email"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="2"
            android:background="@color/colorWhite" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_name_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_account_white"
        android:drawablePadding="@dimen/textSize10"
        android:drawableStart="@drawable/ic_account_white"
        android:hint="@string/sign_in_email_name"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTextHint"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextRed"
        android:textSize="@dimen/textSize10"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_account_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/textSize10"
        android:drawableStart="@drawable/ic_email"
        android:hint="@string/sign_in_email_account"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTextHint"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextRed"
        android:textSize="@dimen/textSize10"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="@dimen/textSize10"
        android:drawableStart="@drawable/ic_lock"
        android:hint="@string/sign_in_email_password"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTextHint"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_enter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextRed"
        android:textSize="@dimen/textSize10"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_submit_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="@dimen/textSize10"
        android:drawableStart="@drawable/ic_lock"
        android:hint="@string/sign_in_email_submit_password"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTextHint"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_enter_submit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextRed"
        android:textSize="@dimen/textSize10"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_12"
            android:paddingTop="@dimen/padding_12"
            android:gravity="center"
            android:background="@drawable/bg_button_register"
            android:text="@string/next"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/pb_continue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_register_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize10" />

</LinearLayout>