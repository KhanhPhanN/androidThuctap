<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp">
<android.support.v7.widget.CardView
    android:id="@+id/img_top_newest_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_6">
    <ImageView
        android:id="@+id/img_top_newest"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ronaldo" />
</android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_luot_xem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_top_newest_container"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_play"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/tv_time_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_top_newest_container"
        android:layout_alignEnd="@+id/img_top_newest_container"
        android:text="abcaaaaa"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/tv_name_japan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_top_newest_container"
        android:text="Name Japanese" />

    <TextView
        android:id="@+id/tv_name_eng"
        android:layout_marginTop="@dimen/padding_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_name_japan"
        android:text="Name English" />
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/img_top_newest_container"
    android:layout_below="@+id/tv_name_japan"
    android:layout_marginTop="@dimen/padding_6"
    app:cardCornerRadius="@dimen/padding_4">
    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textSize="@dimen/textSize12"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorwhite"
        android:background="@color/colorgreen"
         />
</android.support.v7.widget.CardView>
</RelativeLayout>